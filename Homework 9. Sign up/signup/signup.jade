doctype html
html
	head
		meta(charset='utf-8')
		title 注册
		link(rel='stylesheet' href='style.css')
		script(type='text/javascript' src="http://code.jquery.com/jquery-3.3.1.min.js")
		script(type='text/javascript' src='check.js')
		script(type='text/javascript' src='signup.js')


	body
		h1 注册用户
		div.container
			div.position
				form(method='post')
					div.error#unique!=error
					div.username
						lable(for='username') 用户名
						input(id='username', class='username', name='username' value=user.username)
						span.error

					div.sid
						lable(for='sid') 学号
						input(id='sid',class='sid',name='sid' value=user.sid)
						span.error

					div.phone
						lable(for='phone') 电话
						input(id='phone',class='phone',name='phone' value=user.phone)
						span.error

					div.email
						lable(for='email') 邮箱
						input(id='email',class='email',name='email' value=user.email)
						span.error

					div.buttons
						input.button.reset(type='reset' value='清除')
						input.button.submit(type='submit' value='提交')